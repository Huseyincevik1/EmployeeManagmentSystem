@model EmployeeModel

<section class="mt-2 ">
    <div class="container text-center">
        <div class="col-5 container ">
            <form asp-controller="Admin" asp-action="NewEmployee" method="post">
                <div class="mb-3">
                    <label for="idNumber" class="form-label  d-flex">id number</label>
                    <input type="text" name="idNumber" id="idNumber" class="form-control form-control-sm">
                </div>
                <div class="mb-3">
                    <label for="firstName" class="form-label  d-flex">First Name</label>
                    <input type="text" name="firstName" id="firstName" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label  d-flex">Last Name</label>
                    <input type="text" name="lastName" id="lastName" class="form-control form-control-sm">
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label  d-flex">Address</label>
                    <textarea name="address" id="address" class="form-control form-control-lg"></textarea>
                </div>
                <div class="mb-3">
                    <label for="birthDate" class="form-label  d-flex">Birth Date</label>
                    <input type="date" id="birthDate" class="d-flex" name="birthDate" required />
                </div>
                @*   <div class="mb-3">
                <label for="file" class="form-label  d-flex">File Upload</label>
                <input type="file" name="file" id="file" class="form-control ">
                </div>*@
                <div class="mb-3">
                    <label for="department" class="form-label  d-flex">Department</label>
                    <select name="department" id="department" class="form-select">
                        <option value="0">no department</option>
                        <option value="1">finance</option>
                        <option value="2">marketing</option>
                        <option value="3">sales</option>
                        <option value="4">human resources</option>
                        <option value="5">accounting</option>
                        <option value="6">r&d</option>
                    </select>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" name="gender" id="gender" class="form-check-input">
                    <label for="gender" class="form-check-label  d-flex">Gender</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section> 