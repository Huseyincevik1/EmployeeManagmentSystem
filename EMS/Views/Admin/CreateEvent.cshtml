<h1 class="header">Employee Management System - Events</h1>
 
<form asp-controller="Admin" asp-action="CreateEvent" method="post">
    <label for="eventName">Event Name:</label>
    <input type="text" name="eventName" id="eventName" required />
    <label for="eventDate">Event Date:</label>
    <input type="date" name="eventDate" id="eventDate" required />
    <label for="eventType">Event Type:</label>
    <select id="eventType" name="type" required>
        <option value="Meeting">Meeting</option>
        <option value="Conference">Conference</option>
        <option value="Birthday">Birthday</option>
    </select>
    <label for="eventInfo">Event Info:</label>
    <textarea id="eventInfo" name="info"></textarea>
    <button type="submit">Create Event</button>
</form>

<table id="eventList">
    <tr>
        <th>Event Name</th>
        <th>Event Date</th>
        <th>Event Type</th>
        <th>Event Info</th>
        <th>Attendees</th>
        <th>Action</th>
    </tr>
</table>

<script src="~/js/events.js"></script>